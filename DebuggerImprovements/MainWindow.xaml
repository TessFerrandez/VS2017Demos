<Window x:Class="DebuggerImprovements.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DebuggerImprovements"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Height="50" Width="100" Margin="12" x:Name="btnThrow" Click="BtnThrow_Click">1</Button>
            <Button Height="50" Width="100" Margin="12" x:Name="btnThrowNull" Click="BtnThrowNull_Click">2</Button>
            <Button Height="50" Width="100" Margin="12" x:Name="btnRunToClick" Click="BtnRunToClick_Click">3</Button>
        </StackPanel>
    </Grid>
</Window>
